{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "_site": true,
    ".sass-cache": true
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 80,
  "editor.rulers": [80],
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "markup",
        "settings": {
          "foreground": "#bbb"
        }
      },
      {
        "scope": "markup.bold",
        "settings": {
          "fontStyle": "bold",
          "foreground": "#ffffff"
        }
      },
      {
        "scope": "markup.italic",
        "settings": {
          "fontStyle": "italic",
          "foreground": "#fea"
        }
      },
      {
        "scope": "markup.quote",
        "settings": {
          "foreground": "#787"
        }
      },
      {
        "scope": "markup.heading",
        "settings": {
          "fontStyle": "bold",
          "foreground": "#fff"
        }
      }
    ]
  }
}
